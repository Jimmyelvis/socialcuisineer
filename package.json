{
  "name": "social-cuisiener",
  "version": "1.0.0",
  "description": "Social media platform for food enthusiasts",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass assets/sass/main.scss assets/css/style.css --watch",
    "watch:webpack": "webpack --watch --mode development",
    "start": "npm-run-all --parallel watch:sass watch:webpack sync",
    "dev": "webpack --mode development && npm run start",
    "clean": "Remove-Item 'assets/js/dist/*' -Force && npx webpack --mode development",
    "compile:sass": "sass assets/sass/main.scss assets/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" assets/css/style.comp.css -o assets/css/style.prefix.css",
    "compress:css": "sass assets/css/style.prefix.css assets/css/style.css --style=compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "build": "webpack --mode production --progress",
    "sync": "browser-sync start --proxy http://localhost/Social-Cuisiener-2025 --port 3065 --files 'assets/css/*.css,assets/js/dist/*.js,**/*.php'",
    "dev:webpack-server": "webpack serve --mode development --open"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "autoprefixer": "^7.1.4",
    "babel-loader": "^8.2.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-stage-0": "^6.24.1",
    "browser-sync": "^2.27.7",
    "concat": "^1.0.3",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "sass": "^1.64.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0"
  },
  "dependencies": {
    "axios": "^0.25.0",
    "jquery": "^2.1.3",
    "summernote": "^0.8.20"
  }
}
